@namespace Microsoft.AspNetCore.Components
@inherits ComponentBase

<TofuCubes Text="@Text">
    <div class="@context.CSSContainer" @attributes=ContainerAttributes>
        <div class="@context.CSSIcon">
            <Center>
                @RenderIcon(Text)
            </Center>
        </div>
        <div class="@context.CSSText">
            <TextRenderingSimple Value="@context.Text" />
        </div>
    </div>
</TofuCubes>