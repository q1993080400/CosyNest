@namespace Microsoft.AspNetCore.Components
@inherits Component
@inject IJSWindow JSWindow

@if (IsVideo)
{
    <video id="@ID" ontimeupdate="@OnTimeUpDateEvent()" @onloadedmetadata="OnLoadedMetaDataEvent" @onended="OnEndedEvent" @onvolumechange="OnVolumeChangeEvent" @attributes="MediaAttributes" />
}
else
{
    <audio id="@ID" ontimeupdate="@OnTimeUpDateEvent()" @onloadedmetadata="OnLoadedMetaDataEvent" @onended="OnEndedEvent" @onvolumechange="OnVolumeChangeEvent" @attributes="MediaAttributes" />
}

