@namespace Microsoft.AspNetCore.Components
@inherits ComponentBase

@if (@ChildContent is { })
{
    var centerMod = CenterMod switch
    {
        CenterMod.FillFatherElement => "centerMiddRelativelyFill",
        CenterMod.FillElement => "centerMiddRelatively",
        CenterMod.Screen => "centerMiddAbsolute",
        var mod => throw new NotSupportedException($"无法识别{mod}模式")
    };
    var css = $"{centerMod} centerCommon";
    <div class="@css @AdditionalCSS" @attributes="ContainerAttributes">
        <div>
            @ChildContent
        </div>
    </div>
}